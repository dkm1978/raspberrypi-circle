{
  "name": "raspberrypi-baremetal",
  "title": "Raspberry Pi Bare Metal (Circle2)",
  "description": "Bare-metal development platform for Raspberry Pi boards using the Circle2 library.",
  "url": "https://github.com/yourname/platform-raspberrypi-baremetal",
  "version": "0.2.1",
  "license": "MIT",
  "packageRepositories": [
    "https://registry.platformio.org"
  ],
  "frameworks": {
    "circle": {
      "package": "framework-circle2",
      "script": "builder/frameworks/circle.py"
    }
  },
  "packages": {
    "toolchain-gccarmnoneeabi": {
      "type": "toolchain",
      "owner": "platformio",
      "version": ">=1.60301.0,<1.80000.0",
      "optionalVersions": [
        "~1.60301.0",
        "~1.80201.0",
        "~1.90201.0",
        "~1.120301.0"
      ]
    },
    "framework-circle2": {
      "type": "framework",
      "optional": false,
      "version": "*",
      "repository": {
        "type": "zip",
        "url": "https://github.com/dkm1978/raspberrypi-circle/raw/refs/heads/main/framework-circle2.zip"
      }
    }
  },
  "build": {
    "core": "circle",
    "extra_flags": "-DRPI_BAREMETAL"
  },
  "boards": [
    "rpi1b",
    "rpi2b",
    "rpi3b",
    "rpi3bp",
    "rpi4b",
    "rpizero"
  ]
}
